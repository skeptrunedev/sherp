---
import PresentationViewer from '../components/PresentationViewer.astro';
import Slide from '../components/Slide.astro';
import { parseSlides } from '../lib/slideParser';
import '../styles/marp-themes.css';

interface Props {
  frontmatter: {
    title: string;
    description?: string;
    author?: string;
    theme?: string;
    paginate?: boolean;
  };
  rawContent: string;
}

const { frontmatter, rawContent } = Astro.props;
const { title, theme = 'default', paginate = false } = frontmatter;

// Parse slides from markdown content
const slides = parseSlides(rawContent);

// Apply global paginate to all slides if not overridden
const slidesWithGlobalDirectives = slides.map(slide => ({
  ...slide,
  directives: {
    paginate: paginate,
    ...slide.directives,
  }
}));
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  {frontmatter.description && <meta name="description" content={frontmatter.description} />}
  {frontmatter.author && <meta name="author" content={frontmatter.author} />}
</head>
<body>
  <PresentationViewer title={title} theme={theme}>
    {slidesWithGlobalDirectives.map((slide, index) => (
      <Slide
        directives={slide.directives}
        slideNumber={index + 1}
        totalSlides={slides.length}
        theme={theme}
      >
        <div set:html={slide.content} />
      </Slide>
    ))}
  </PresentationViewer>
</body>
</html>

<style is:global>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
</style>
